[Unit]
Description=IT Army Box Root Helper Worker

[Service]
Type=simple
User=root
Group=root
StandardInput=socket
StandardOutput=socket
ExecStart=/usr/bin/env php /var/www/html/itarmybox-webui/root_helper.php
NoNewPrivileges=yes
PrivateTmp=yes
ProtectSystem=strict
ProtectHome=yes
ReadOnlyPaths=/var/log
ReadWritePaths=/tmp /var/spool/cron /var/spool/cron/crontabs /etc/systemd/system /opt/itarmy
